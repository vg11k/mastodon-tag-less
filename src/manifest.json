{

  "manifest_version": 2,
  "name": "Mastodon Tag Less",
  "version": "0002",

  "description": "Hide mastodon posts if they have more than an maximum amount of hashtag",
  "homepage_url": "https://github.com/vg11k/mastodon-tag-less",
  "icons": {
    "48": "icons/favicon.png"
  },

  "permissions": [
	"<all_urls>",
	"contextMenus",
	"storage",
	"tabs"
	],

  "browser_action": {
    "default_icon": "icons/favicon.ico",
    "default_title": "Mastodon Tag Less",
    "default_popup": "popup/mastodon-tag-less-menu.html"
  },
  
  "background": {
    "scripts": ["background/mastodon-tag-less-bg.js"],
	"persistent": false,
	"type": "module"
  }
}	
